# Songify Frontend Configuration - Production Environment
# Copy this file to .env.production for production deployment
# These variables are safe to expose (no secrets)

# Spotify Client Configuration (Production)
VITE_CLIENT_ID=your_production_spotify_client_id

# Application URLs (HTTPS Required for Production)
VITE_REDIRECT_URI=https://yourdomain.com/callback
VITE_BACKEND_URL=https://api.yourdomain.com

# Environment
NODE_ENV=production

# Feature Flags (Optional)
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=true
