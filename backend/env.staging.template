# Songify Backend Configuration - Staging Environment
# Copy this file to .env.staging for staging deployment
# Use for pre-production testing with production-like settings

# Spotify OAuth Credentials (Staging App)
CLIENT_ID=your_staging_spotify_client_id
CLIENT_SECRET=your_staging_spotify_client_secret

# Application URLs (HTTPS Recommended for Staging)
REDIRECT_URI=https://staging.yourdomain.com/callback
FRONTEND_URL=https://staging.yourdomain.com

# Server Configuration
PORT=3000
NODE_ENV=staging

# Session Security (Generate unique for staging)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_staging_session_secret_here

# CORS Origins
CORS_ORIGINS=https://staging.yourdomain.com

# Redis Configuration (Unique password for staging)
REDIS_PASSWORD=node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
REDIS_URL=redis://redis:6379

# Monitoring & Logging (More verbose for testing)
LOG_LEVEL=debug
ENABLE_METRICS=true

# Security (Staging-appropriate settings)
SECURE_COOKIES=true
TRUST_PROXY=true
