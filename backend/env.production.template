# Songify Backend Configuration - Production Environment
# Copy this file to .env.production for production deployment
# SECURITY CRITICAL: Use secure secret management in production
#
# Required for production deployment with docker-compose.prod.yml

# Spotify OAuth Credentials (Production App)
CLIENT_ID=your_production_spotify_client_id
CLIENT_SECRET=your_production_spotify_client_secret

# Application URLs (HTTPS Required for Production)
REDIRECT_URI=https://yourdomain.com/callback
FRONTEND_URL=https://yourdomain.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Security (CRITICAL: Use crypto-secure random string)
SESSION_SECRET=node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# CORS Origins (HTTPS URLs only for production)
CORS_ORIGINS=https://yourdomain.com

# Redis Configuration (CRITICAL: Strong password required)
REDIS_PASSWORD=node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
REDIS_URL=redis://redis:6379

# Database Configuration (if applicable)
# DATABASE_URL=postgresql://user:password@host:port/database

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Security Headers & HTTPS
SECURE_COOKIES=true
TRUST_PROXY=true
